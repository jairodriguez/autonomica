# Production Environment Configuration
# This file contains environment variables for the production environment
# Copy this file to .env.production and modify as needed

# Environment
NODE_ENV=production
ENVIRONMENT=production
ENV=production

# Application Configuration
APP_NAME=Autonomica
APP_VERSION=1.0.0
APP_ENV=production
DEBUG=false
LOG_LEVEL=warn

# Server Configuration
HOST=0.0.0.0
PORT=8000
FRONTEND_PORT=3000
WORKER_PORT=8001

# Database Configuration
DATABASE_URL=postgresql://prod_user:${DATABASE_PASSWORD}@prod-db:5432/autonomica_production
DATABASE_HOST=prod-db
DATABASE_PORT=5432
DATABASE_NAME=autonomica_production
DATABASE_USER=prod_user
DATABASE_PASSWORD=${DATABASE_PASSWORD}
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=40
DATABASE_POOL_TIMEOUT=30
DATABASE_SSL_MODE=require

# Redis Configuration
REDIS_URL=redis://prod-redis:6379/0
REDIS_HOST=prod-redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=${REDIS_PASSWORD}
REDIS_POOL_SIZE=50
REDIS_SSL=true

# OpenAI Configuration
OPENAI_API_KEY=${OPENAI_API_KEY}
OPENAI_API_BASE=https://api.openai.com/v1
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=8000
OPENAI_TEMPERATURE=0.7
OPENAI_TIMEOUT=120

# Clerk Authentication
CLERK_SECRET_KEY=${CLERK_SECRET_KEY}
CLERK_PUBLISHABLE_KEY=${CLERK_PUBLISHABLE_KEY}
CLERK_JWT_ISSUER=https://clerk.autonomica.ai
CLERK_WEBHOOK_SECRET=${CLERK_WEBHOOK_SECRET}

# External APIs
TWITTER_API_KEY=${TWITTER_API_KEY}
TWITTER_API_SECRET=${TWITTER_API_SECRET}
TWITTER_ACCESS_TOKEN=${TWITTER_ACCESS_TOKEN}
TWITTER_ACCESS_TOKEN_SECRET=${TWITTER_ACCESS_TOKEN_SECRET}

LINKEDIN_CLIENT_ID=${LINKEDIN_CLIENT_ID}
LINKEDIN_CLIENT_SECRET=${LINKEDIN_CLIENT_SECRET}
LINKEDIN_ACCESS_TOKEN=${LINKEDIN_ACCESS_TOKEN}

# Email Configuration
SMTP_HOST=smtp.autonomica.ai
SMTP_PORT=587
SMTP_USER=production@autonomica.ai
SMTP_PASSWORD=${SMTP_PASSWORD}
SMTP_TLS=true
SMTP_FROM=production@autonomica.ai

# Monitoring and Logging
SENTRY_DSN=${SENTRY_DSN}
LOGFLARE_API_KEY=${LOGFLARE_API_KEY}
LOGFLARE_SOURCE_TOKEN=${LOGFLARE_SOURCE_TOKEN}

# Performance and Caching
CACHE_TTL=600
SESSION_TTL=7200
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=3600

# Security
SECRET_KEY=${SECRET_KEY}
JWT_SECRET=${JWT_SECRET}
ENCRYPTION_KEY=${ENCRYPTION_KEY}
CORS_ORIGINS=https://autonomica.ai,https://www.autonomica.ai,https://app.autonomica.ai

# Feature Flags
FEATURE_AI_CHAT=true
FEATURE_WEB_SCRAPING=true
FEATURE_SOCIAL_MEDIA=true
FEATURE_DATA_ANALYSIS=true
FEATURE_MULTI_AGENT=true
FEATURE_ADVANCED_ANALYTICS=true

# Testing and Development
TESTING=false
MOCK_EXTERNAL_APIS=false
ENABLE_DEBUG_ENDPOINTS=false
ENABLE_SWAGGER_UI=false
ENABLE_REDOC=false

# Backup and Storage
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 1 * * *
BACKUP_RETENTION_DAYS=30
STORAGE_BUCKET=autonomica-production-backups
STORAGE_REGION=us-east-1

# Third-party Services
GOOGLE_ANALYTICS_ID=${GOOGLE_ANALYTICS_ID}
MIXPANEL_TOKEN=${MIXPANEL_TOKEN}
INTERCOM_APP_ID=${INTERCOM_APP_ID}
ZENDESK_DOMAIN=autonomica.zendesk.com
ZENDESK_EMAIL=production@autonomica.ai
ZENDESK_API_TOKEN=${ZENDESK_API_TOKEN}

# Webhook URLs
WEBHOOK_SLACK_URL=${WEBHOOK_SLACK_URL}
WEBHOOK_DISCORD_URL=${WEBHOOK_DISCORD_URL}
WEBHOOK_TEAMS_URL=${WEBHOOK_TEAMS_URL}

# Timezone and Locale
TZ=UTC
LOCALE=en_US
DATE_FORMAT=YYYY-MM-DD
TIME_FORMAT=HH:mm:ss

# Health Check
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=15
HEALTH_CHECK_TIMEOUT=5
HEALTH_CHECK_RETRIES=2

# Load Balancer Configuration
LOAD_BALANCER_ENABLED=true
LOAD_BALANCER_ALGORITHM=round_robin
LOAD_BALANCER_HEALTH_CHECK_PATH=/health
LOAD_BALANCER_HEALTH_CHECK_INTERVAL=10

# Auto-scaling Configuration
AUTO_SCALE_ENABLED=true
AUTO_SCALE_MIN_INSTANCES=2
AUTO_SCALE_MAX_INSTANCES=10
AUTO_SCALE_CPU_THRESHOLD=70
AUTO_SCALE_MEMORY_THRESHOLD=80

# CDN Configuration
CDN_ENABLED=true
CDN_PROVIDER=cloudflare
CDN_DOMAIN=cdn.autonomica.ai
CDN_CACHE_TTL=3600

# SSL Configuration
SSL_ENABLED=true
SSL_CERT_PATH=/etc/ssl/certs/autonomica.ai.crt
SSL_KEY_PATH=/etc/ssl/private/autonomica.ai.key
SSL_REDIRECT_HTTP=true
SSL_HSTS_ENABLED=true
SSL_HSTS_MAX_AGE=31536000